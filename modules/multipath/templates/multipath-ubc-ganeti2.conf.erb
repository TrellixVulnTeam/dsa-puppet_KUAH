# conversion from MSA stype WWIDs to multipathd.conf:
#
#   sed -re 's#(.{6})(.{6})0000(.{2})(.*)#36\1000\2\3\4#'

blacklist {
        devnode "^(ram|raw|loop|fd|md|dm-|sr|scd|st)[0-9]*"
        devnode "^hd[a-z][[0-9]*]"
        devnode "^vd[a-z]"
        devnode "^cciss!c[0-9]d[0-9]*[p[0-9]*]"
        devnode "^sda[0-9]*$"
}
multipaths {
        # rachmaninoff
        multipath {
                wwid 3600c0ff000277c5f4505d15701000000
                alias rachmaninoff
        }
        # x86-ubc-01
        multipath {
                wwid 3600c0ff00027786cdc06dd5701000000
                alias x86-ubc-01
        }
        multipath {
                wwid 3600c0ff00027786c3137dc5701000000
                alias x86-ubc-01-lvm
        }
}
