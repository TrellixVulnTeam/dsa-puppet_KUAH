#!/bin/bash

set -e

if [ -z "$TARGET" -o ! -d "$TARGET" ]; then
  echo "Missing target directory"
  exit 1
fi

chroot "$TARGET" apt-get -qq update
chroot "$TARGET" apt-get -qq install vim ssh extlinux

if [ "$ARCH" = "amd64" ]; then
    chroot "$TARGET" apt-get -qq install linux-image-amd64
fi

exit 0
